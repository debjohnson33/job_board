<%= form_for @job do |f| %>
    <div>
        <%= f.label :title %>
        <%= f.text_field :title %>
    </div>
    <div>
        <%= f.label :description %>
        <%= f.text_area :description, size: '60x6' %>
    </div>
    <div>
        <%= f.label :tag_list, "Tags (separated by commas)" %><br />
        <%= f.text_field :tag_list%>
    </div>
    <div>
        <%= f.submit %>
    </div>
<% end %>